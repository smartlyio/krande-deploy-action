{
  "name": "krane-deploy-action",
  "version": "4.3.3",
  "private": true,
  "description": "A github action to deploy services to kubernetes with https://github.com/Shopify/krane",
  "main": "lib/index.js",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "lint": "eslint src/**/*.ts",
    "pack": "ncc build",
    "test": "jest",
    "all": "npm run format-check && npm run build && npm run lint && npm run pack",
    "version": "npm run build && npm run pack && git add -- dist"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/smartlyio/krane-deploy-action.git"
  },
  "keywords": [
    "actions",
    "kubernetes",
    "deploy",
    "krane"
  ],
  "author": "Smartly.io",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "1.5.0",
    "@actions/exec": "1.1.0",
    "@types/js-yaml": "4.0.3",
    "ajv": "8.6.3",
    "js-yaml": "4.1.0"
  },
  "devDependencies": {
    "@actions/io": "1.1.1",
    "@types/jest": "27.0.1",
    "@types/mock-fs": "4.13.1",
    "@types/node": "16.7.2",
    "@typescript-eslint/parser": "4.31.1",
    "@vercel/ncc": "0.31.1",
    "eslint": "7.32.0",
    "eslint-plugin-github": "4.3.0",
    "eslint-plugin-jest": "24.4.0",
    "jest": "27.2.0",
    "jest-circus": "27.2.0",
    "mock-fs": "5.0.0",
    "prettier": "2.4.0",
    "ts-jest": "27.0.5",
    "typescript": "4.4.3"
  }
}
