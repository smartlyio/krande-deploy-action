{
  "name": "krane-deploy-action",
  "version": "4.4.10",
  "private": true,
  "description": "A github action to deploy services to kubernetes with https://github.com/Shopify/krane",
  "main": "lib/index.js",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "lint": "eslint src/**/*.ts",
    "pack": "ncc build",
    "test": "jest",
    "all": "npm run format-check && npm run build && npm run lint && npm run pack",
    "version": "npm run build && npm run pack && git add -- dist"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/smartlyio/krane-deploy-action.git"
  },
  "keywords": [
    "actions",
    "kubernetes",
    "deploy",
    "krane"
  ],
  "author": "Smartly.io",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "1.10.1",
    "@actions/exec": "1.1.1",
    "@types/js-yaml": "4.0.9",
    "ajv": "8.12.0",
    "js-yaml": "4.1.0"
  },
  "devDependencies": {
    "@actions/io": "1.1.3",
    "@types/jest": "29.5.12",
    "@types/mock-fs": "4.13.4",
    "@types/node": "20.14.15",
    "@typescript-eslint/parser": "7.18.0",
    "@vercel/ncc": "0.38.1",
    "eslint": "8.57.0",
    "eslint-plugin-github": "4.10.2",
    "eslint-plugin-jest": "27.9.0",
    "jest": "29.7.0",
    "jest-circus": "29.7.0",
    "mock-fs": "5.2.0",
    "prettier": "3.2.5",
    "ts-jest": "29.1.2",
    "typescript": "5.4.4"
  }
}
